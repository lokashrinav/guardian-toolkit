{
  "manifest_version": 3,
  "name": "Baseline Code Annotation",
  "version": "1.0.0",
  "description": "Adds baseline compatibility indicators to code snippets on MDN, Stack Overflow, and GitHub",
  
  "permissions": [
    "storage"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "*://developer.mozilla.org/*",
        "*://stackoverflow.com/*",
        "*://stackexchange.com/*",
        "*://github.com/*",
        "*://gist.github.com/*",
        "*://codepen.io/*",
        "*://codesandbox.io/*",
        "*://jsfiddle.net/*"
      ],
      "js": ["content-script.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "tooltip.html"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Baseline Code Annotation"
  },
  
  "author": "Baseline Hackathon Team"
}