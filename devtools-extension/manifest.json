{
  "manifest_version": 3,
  "name": "Baseline Web Features Inspector",
  "version": "1.0.0",
  "description": "Chrome DevTools panel for inspecting baseline web features compatibility",
  
  "permissions": [
    "activeTab",
    "scripting"
  ],
  
  "devtools_page": "devtools.html",
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["injected-script.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  
  "author": "Baseline Hackathon Team"
}